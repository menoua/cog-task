//@ savage
//@ python

(
    name: "Basic",
    version: "0.1",
    description: r#"This is a basic task demonstrating the use of "fasteval", "savage", and "python" interpreters."#,

    config: (
        blocks_per_row: 3,
    ),

    blocks: [
        (
            name: "fasteval",
            config: (
                interpreter: fasteval
            ),
            tree: seq(([
                par(([
                    instruction((
                        header: "Factorials",
                        text: "${n}-th factorial: ${x}",
                        in_mapping: { 1: "n", 2: "x" }
                    ))
                ], [
                    clock((
                        step: 1,
                        from: 1,
                        on_start: true,
                        out_tic: 1,
                    )),
                    function((
                        expr: "self * n",
                        vars: { "self": 1, "n": 1 },
                        in_mapping: { 1: "n" },
                        out_result: 2,
                        persistent: true,
                    ))
                ]))
            ]))
        ),

        (
            name: "Savage",
            config: (
                interpreter: savage
            ),
            tree: seq(([
                par(([
                    instruction((
                        header: "Factorials",
                        text: "${n}-th factorial: ${x}",
                        in_mapping: { 1: "n", 2: "x" }
                    ))
                ], [
                    clock((
                        step: 1,
                        from: 1,
                        on_start: true,
                        out_tic: 1,
                    )),
                    function((
                        expr: "factorial(n)",
                        vars: { "n": 1 },
                        in_mapping: { 1: "n" },
                        out_result: 2,
                        persistent: true,
                    ))
                ])),

                par(([
                    instruction((
                        header: "Factorials",
                        text: "${n}-th prime: ${x}",
                        in_mapping: { 3: "n", 4: "x" }
                    ))
                ], [
                    clock((
                        step: 1,
                        from: 1,
                        on_start: true,
                        out_tic: 3,
                    )),
                    function((
                        expr: "nth_prime(n)",
                        vars: { "n": 1 },
                        in_mapping: { 3: "n" },
                        out_result: 4,
                        persistent: true,
                    ))
                ]))
            ]))
        ),

        (
            name: "Python",
            config: (
                interpreter: python
            ),
            tree: seq(([
                par(([
                    instruction((
                        header: "Factorials",
                        text: "${n}-th factorial: ${x}",
                        in_mapping: { 2: "n", 3: "x" }
                    ))
                ], [
                    clock((
                        step: 1,
                        out_tic: 1,
                    )),
                    function((
                        expr: "self + 1",
                        vars: { "self": 0 },
                        interpreter: fasteval,
                        in_update: 1,
                        out_result: 2,
                        persistent: true,
                    )),
                    function((
                        init_src: "factorials_init.py",
                        expr: "next_factorial()",
                        vars: { "self": 1 },
                        in_update: 1,
                        out_result: 3,
                        persistent: true,
                    ))
                ])),

                par(([
                    instruction((
                        header: "Primes",
                        text: "${n}-th prime: ${x}",
                        params: { "n": "1" },
                        in_mapping: { 4: "n", 5: "x" }
                    ))
                ], [
                    clock((
                        step: 1,
                        from: 1,
                        out_tic: 4,
                    )),
                    function((
                        init_src: "primes_init.py",
                        src: "primes_eval.py",
                        vars: { "self": 1 },
                        in_update: 4,
                        out_result: 5,
                        persistent: true,
                    ))
                ]))
            ]))
        ),
    ]
)
